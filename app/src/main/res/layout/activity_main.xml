<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#404040"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        tools:context=".MainActivity">


        <ImageButton
            android:id="@+id/armsWorkButt"
            android:layout_width="0dp"
            android:layout_height="175dp"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="17dp"
            android:adjustViewBounds="true"
            android:backgroundTint="#404040"
            android:cropToPadding="true"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/gympic7"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/shoulderWorkButt"
            android:layout_width="0dp"
            android:layout_height="175dp"
            android:layout_marginStart="19dp"
            android:layout_marginTop="119dp"
            android:layout_marginEnd="19dp"
            android:adjustViewBounds="true"
            android:backgroundTint="#404040"
            android:cropToPadding="true"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9"
            app:srcCompat="@drawable/gympic4"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/backWorkButt"
            android:layout_width="0dp"
            android:layout_height="175dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="118dp"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="121dp"
            android:adjustViewBounds="true"
            android:backgroundTint="#404040"
            android:cropToPadding="true"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10"
            app:srcCompat="@drawable/gympic5"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/legsWorkButt"
            android:layout_width="0dp"
            android:layout_height="175dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="200dp"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="213dp"
            android:adjustViewBounds="true"
            android:backgroundTint="#404040"
            android:cropToPadding="true"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView11"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/gympic6"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/segoe"
            android:text="LEGS ROUTINE"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintTop_toTopOf="@+id/legsWorkButt" />

        <ImageView
            android:id="@+id/rectanglegod"
            android:layout_width="426dp"
            android:layout_height="29dp"
            android:layout_marginTop="13dp"
            app:layout_constraintBottom_toTopOf="@+id/textView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/workoutOTD"
            app:srcCompat="@drawable/button_layout" />


        <ImageView
            android:id="@+id/rectanglegod3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="65dp"
            android:layout_marginBottom="64dp"
            android:background="#C4C4C4"
            app:layout_constraintBottom_toTopOf="@+id/textView8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/searchPrograms"
            app:layout_constraintVertical_bias="1.0" />

        <ImageButton
            android:id="@+id/absWorkButt"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="45dp"
            android:adjustViewBounds="true"
            android:backgroundTint="#404040"
            android:cropToPadding="true"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@+id/textView9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView7"
            app:srcCompat="@drawable/gympic2"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/chestWorkButt"
            android:layout_width="0dp"
            android:layout_height="175dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="198dp"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="197dp"
            android:adjustViewBounds="true"
            android:backgroundTint="#404040"
            android:cropToPadding="true"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="@+id/shoulderWorkButt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/absWorkButt"
            app:srcCompat="@drawable/gympic3"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/mainProgram"
            android:layout_width="0dp"
            android:layout_height="171dp"
            android:layout_marginStart="19dp"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="19dp"
            android:layout_marginBottom="52dp"
            android:adjustViewBounds="true"
            android:backgroundTint="#C3C3C3"
            android:cropToPadding="true"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="@+id/textView7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/rectanglegod3"
            app:srcCompat="@drawable/gympic1"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/segoe"
            android:text="PROGRAMS"
            android:textColor="#FFFFFF"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/mainProgram"
            app:layout_constraintTop_toTopOf="@+id/rectanglegod3" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginTop="370dp"
            android:fontFamily="@font/segoe"
            android:text="WORKOUTS"
            android:textColor="#FFFFFF"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/absWorkButt"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/viewAllButton"
            android:layout_width="78dp"
            android:layout_height="37dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="4dp"
            android:background="@null"
            android:backgroundTint="#858585"
            android:text="View All"
            android:textColor="#FFFFFF"
            app:iconTint="#858585"
            app:layout_constraintBottom_toTopOf="@+id/mainProgram"
            app:layout_constraintEnd_toEndOf="parent"
            app:strokeColor="#858585" />

        <TextView
            android:id="@+id/workoutOTD"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:layout_marginStart="21dp"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="9dp"
            android:layout_marginBottom="62dp"
            android:background="#404040"
            android:fontFamily="@font/segoe"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/viewAllButton"
            app:layout_constraintEnd_toStartOf="@+id/searchPrograms"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/searchPrograms"
            tools:text="PLACEHOLDER" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="19dp"
            android:layout_marginBottom="11dp"
            android:background="@drawable/button_layout"
            android:fontFamily="@font/segoe"
            android:text="WORKOUT OF THE DAY"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/searchPrograms"
            app:layout_constraintEnd_toEndOf="@+id/workoutOTD"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="346dp"
            android:layout_height="29dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="115dp"
            android:layout_marginBottom="117dp"
            android:fontFamily="@font/segoe"
            android:text="HIIT (5 MINUTE WORKOUT ANYONE CAN DO)"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/textView8"
            app:layout_constraintEnd_toEndOf="@+id/rectanglegod3"
            app:layout_constraintHorizontal_bias="0.023"
            app:layout_constraintStart_toStartOf="@+id/textView7"
            app:layout_constraintTop_toTopOf="@+id/mainProgram"
            app:layout_constraintVertical_bias="0.4" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="306dp"
            android:layout_height="46dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="19dp"
            android:fontFamily="@font/segoe"
            android:text="ABS ROUTINE"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/absWorkButt"
            app:layout_constraintTop_toTopOf="@+id/absWorkButt" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="635dp"
            android:layout_marginEnd="12dp"
            android:fontFamily="@font/segoe"
            android:text="CHEST ROUTINE"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/rectanglegod"
            app:layout_constraintStart_toStartOf="@+id/chestWorkButt"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="345dp"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="344dp"
            android:fontFamily="@font/segoe"
            android:text="SHOULDER ROUTINE"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/legsWorkButt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/chestWorkButt"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="397dp"
            android:layout_marginBottom="397dp"
            android:fontFamily="@font/segoe"
            android:text="BACK ROUTINE"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/backWorkButt"
            app:layout_constraintTop_toTopOf="@+id/chestWorkButt" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/segoe"
            android:text="ARM ROUTINE"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/armsWorkButt"
            app:layout_constraintTop_toTopOf="@+id/armsWorkButt" />

        <ImageButton
            android:id="@+id/searchPrograms"
            android:layout_width="78dp"
            android:layout_height="65dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="5dp"
            android:backgroundTint="#404040"
            android:scaleType="centerInside"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/workoutOTD"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/search" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>